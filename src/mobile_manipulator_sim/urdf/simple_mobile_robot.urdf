<?xml version="1.0"?>
<robot name="simple_mobile_robot">

  <!-- ========================================= -->
  <!-- BASE LINK - IDENTIQUE -->
  <!-- ========================================= -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.6 0.4 0.1"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.6 0.4 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="50"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.5" ixy="0" ixz="0" iyy="0.7" iyz="0" izz="1.0"/>
    </inertial>
  </link>

  <!-- ========================================= -->
  <!-- 4 ROUES MOTRICES - NOUVELLE CONFIGURATION -->
  <!-- ========================================= -->
  
  <!-- ROUE AVANT GAUCHE -->
  <link name="front_left_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
      <material name="black"><color rgba="0 0 0 1"/></material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <joint name="front_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="front_left_wheel"/>
    <origin xyz="0.2 0.225 -0.1" rpy="-1.57 0 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <!-- ROUE AVANT DROITE -->
  <link name="front_right_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
      <material name="black"><color rgba="0 0 0 1"/></material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <joint name="front_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="front_right_wheel"/>
    <origin xyz="0.2 -0.225 -0.1" rpy="-1.57 0 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <!-- ROUE ARRIÈRE GAUCHE -->
  <link name="rear_left_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
      <material name="black"><color rgba="0 0 0 1"/></material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <joint name="rear_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_left_wheel"/>
    <origin xyz="-0.2 0.225 -0.1" rpy="-1.57 0 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <!-- ROUE ARRIÈRE DROITE -->
  <link name="rear_right_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
      <material name="black"><color rgba="0 0 0 1"/></material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <joint name="rear_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_right_wheel"/>
    <origin xyz="-0.2 -0.225 -0.1" rpy="-1.57 0 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <!-- ========================================= -->
  <!-- BRAS MANIPULATEUR - IDENTIQUE -->
  <!-- ========================================= -->
  
  <link name="arm_base">
    <visual>
      <geometry>
        <cylinder radius="0.06" length="0.12"/>
      </geometry>
      <material name="grey"><color rgba="0.5 0.5 0.5 1"/></material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.06" length="0.12"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <joint name="arm_base_joint" type="fixed">
    <parent link="base_link"/>
    <child link="arm_base"/>
    <origin xyz="0 0 0.16" rpy="0 0 0"/>
  </joint>

  <!-- Link 1 - segment vertical (ORANGE) -->
  <link name="link1">
    <visual>
      <origin xyz="0 0 0.2" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.35"/>
      </geometry>
      <material name="orange"><color rgba="1 0.5 0 1"/></material>
    </visual>
    <collision>
      <origin xyz="0 0 0.2" rpy="0 0 0"/>
      <geometry>
        <box size="0.06 0.06 0.38"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="2"/>
      <origin xyz="0 0 0.2"/>
      <inertia ixx="0.05" ixy="0" ixz="0" iyy="0.05" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <joint name="joint1" type="revolute">
    <parent link="arm_base"/>
    <child link="link1"/>
    <origin xyz="0 0 0.06" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="10" velocity="1"/>
  </joint>

  <!-- Coude de liaison -->
  <link name="elbow">
    <visual>
      <geometry>
        <sphere radius="0.035"/>
      </geometry>
      <material name="dark_orange"><color rgba="0.8 0.3 0 1"/></material>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.035"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.3"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <joint name="elbow_joint" type="fixed">
    <parent link="link1"/>
    <child link="elbow"/>
    <origin xyz="0 0 0.4" rpy="0 0 0"/>
  </joint>

  <!-- Link 2 - segment horizontal (VERT) -->
  <link name="link2">
    <visual>
      <origin xyz="0.15 0 0" rpy="0 1.57 0"/>
      <geometry>
        <cylinder radius="0.04" length="0.3"/>
      </geometry>
      <material name="green"><color rgba="0 1 0 1"/></material>
    </visual>
    <collision>
      <origin xyz="0.16 0 0" rpy="0 1.57 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.26"/> 
      </geometry>
    </collision>
    <inertial>
      <mass value="1.5"/>
      <origin xyz="0.15 0 0"/>
      <inertia ixx="0.02" ixy="0" ixz="0" iyy="0.02" iyz="0" izz="0.005"/>
    </inertial>
  </link>

  <joint name="joint2" type="revolute">
    <parent link="elbow"/>
    <child link="link2"/>
    <origin xyz="0.06 0 0" rpy="0 0 0"/> 
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1"/>
    <dynamics damping="1.0" friction="0.5"/>
  </joint>

  <!-- ========================================= -->
  <!-- GRIPPER - IDENTIQUE -->
  <!-- ========================================= -->
  
  <link name="gripper_base">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.08"/>
      </geometry>
      <material name="yellow"><color rgba="1 1 0 1"/></material>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.1 0.08"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.3"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <joint name="gripper_joint" type="fixed">
    <parent link="link2"/>
    <child link="gripper_base"/>
    <origin xyz="0.4 0 0" rpy="0 0 0"/>
  </joint>

  <link name="finger_left">
    <visual>
      <origin xyz="0.04 0 0"/>
      <geometry>
        <box size="0.08 0.02 0.1"/>
      </geometry>
      <material name="red"><color rgba="1 0 0 1"/></material>
    </visual>
    <collision>
      <origin xyz="0.04 0 0"/>
      <geometry>
        <box size="0.08 0.02 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0.04 0 0"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <joint name="finger_left_joint" type="prismatic">
    <parent link="gripper_base"/>
    <child link="finger_left"/>
    <origin xyz="0.05 0.04 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="0" upper="0.04" effort="5" velocity="0.5"/>
  </joint>

  <link name="finger_right">
    <visual>
      <origin xyz="0.04 0 0"/>
      <geometry>
        <box size="0.08 0.02 0.1"/>
      </geometry>
      <material name="red"><color rgba="1 0 0 1"/></material>
    </visual>
    <collision>
      <origin xyz="0.04 0 0"/>
      <geometry>
        <box size="0.08 0.02 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0.04 0 0"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <joint name="finger_right_joint" type="prismatic">
    <parent link="gripper_base"/>
    <child link="finger_right"/>
    <origin xyz="0.05 -0.04 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.04" upper="0" effort="5" velocity="0.5"/>
  </joint>

  <!-- ========================================= -->
  <!-- GAZEBO MATERIALS - IDENTIQUE + 4 ROUES -->
  <!-- ========================================= -->
  
  <gazebo reference="base_link">
    <material>Gazebo/Blue</material>
    <mu1>0.5</mu1>
    <mu2>0.5</mu2>
  </gazebo>
  
  <!-- Les 4 roues avec friction maximale -->
  <gazebo reference="front_left_wheel">
    <material>Gazebo/Black</material>
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
  </gazebo>
  
  <gazebo reference="front_right_wheel">
    <material>Gazebo/Black</material>
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
  </gazebo>
  
  <gazebo reference="rear_left_wheel">
    <material>Gazebo/Black</material>
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
  </gazebo>
  
  <gazebo reference="rear_right_wheel">
    <material>Gazebo/Black</material>
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
  </gazebo>

  <gazebo reference="arm_base">
    <material>Gazebo/Grey</material>
  </gazebo>
  
  <gazebo reference="link1">
    <material>Gazebo/Orange</material>
  </gazebo>
  
  <gazebo reference="elbow">
    <material>Gazebo/Orange</material>
  </gazebo>
  
  <gazebo reference="link2">
    <material>Gazebo/Green</material>
  </gazebo>
  
  <gazebo reference="gripper_base">
    <material>Gazebo/Yellow</material>
  </gazebo>
  
  <gazebo reference="finger_left">
    <material>Gazebo/Red</material>
  </gazebo>
  
  <gazebo reference="finger_right">
    <material>Gazebo/Red</material>
  </gazebo>

  <!-- Désactivation des auto-collisions -->
  <gazebo>
    <self_collide>0</self_collide>
  </gazebo>

  <gazebo reference="base_link">
    <selfCollide>false</selfCollide>
  </gazebo>
  
  <gazebo reference="arm_base">
    <selfCollide>false</selfCollide>
  </gazebo>
  
  <gazebo reference="link1">
    <selfCollide>false</selfCollide>
  </gazebo>
  
  <gazebo reference="elbow">
    <selfCollide>false</selfCollide>
  </gazebo>
  
  <gazebo reference="link2">
    <selfCollide>false</selfCollide>
  </gazebo>
  
  <gazebo reference="gripper_base">
    <selfCollide>false</selfCollide>
  </gazebo>

  <gazebo reference="finger_left">
    <selfCollide>false</selfCollide>
  </gazebo>

  <gazebo reference="finger_right">
    <selfCollide>false</selfCollide>
  </gazebo>

  <!-- ========================================= -->
  <!-- ROS2 CONTROL - ADAPTÉ POUR 4 ROUES -->
  <!-- ========================================= -->
  
  <ros2_control name="robot_hardware" type="system">
    <hardware>
      <plugin>gazebo_ros2_control/GazeboSystem</plugin>
    </hardware>

    <!-- Joints du bras - IDENTIQUE -->
    <joint name="joint1">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>

    <joint name="joint2">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>

    <!-- Joints du gripper - IDENTIQUE -->
    <joint name="finger_left_joint">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>

    <joint name="finger_right_joint">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <!-- Les 4 roues - NOUVELLE CONFIGURATION -->
    <joint name="front_left_wheel_joint">
      <command_interface name="velocity"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>

    <joint name="front_right_wheel_joint">
      <command_interface name="velocity"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>

    <joint name="rear_left_wheel_joint">
      <command_interface name="velocity"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>

    <joint name="rear_right_wheel_joint">
      <command_interface name="velocity"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    
  </ros2_control>

  <!-- Plugin Gazebo ros2_control - IDENTIQUE -->
  <gazebo>
    <plugin filename="libgazebo_ros2_control.so" name="gazebo_ros2_control">
      <robot_param>robot_description</robot_param>
      <robot_param_node>robot_state_publisher</robot_param_node>
      <parameters>/home/douaa/Lab_moveit/install/mobile_manipulator_sim/share/mobile_manipulator_sim/config/robot_controllers.yaml</parameters>
    </plugin>
  </gazebo>


  <!-- ========================================= -->
  <!-- LIDAR SENSOR - IDENTIQUE -->
  <!-- ========================================= -->
  
  <link name="lidar_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.06"/>
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.9 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.06"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_link"/>
    <origin xyz="0.2 0 0.10" rpy="0 0 0"/>
  </joint>

  <gazebo reference="lidar_link">
    <sensor type="ray" name="lidar_sensor">
      <pose>0 0 0 0 0 0</pose>
      <visualize>true</visualize>
      <update_rate>10</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>360</samples>
            <resolution>1</resolution>
            <min_angle>-2.356</min_angle>
            <max_angle>2.356</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.3</min>
          <max>10.0</max>
          <resolution>0.01</resolution>
        </range>
      </ray>
      <plugin name="gazebo_ros_laser" filename="libgazebo_ros_ray_sensor.so">
        <ros> 
          <remapping>~/out:=scan</remapping>
        </ros>
        <output_type>sensor_msgs/LaserScan</output_type>
        <frame_name>lidar_link</frame_name>
      </plugin>
    </sensor>
    <material>Gazebo/Black</material>
  </gazebo>
  <!-- ========================================= -->
  <!-- CAMÉRA RGB - POUR ARUCO DETECTION :)  -->
  <!-- ========================================= -->
  
  <link name="camera_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.03 0.08 0.03"/>
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.03 0.08 0.03"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <joint name="camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="0 0 0.05" rpy="0 1.5708 0"/>
  </joint>

  <!-- Plugin Gazebo pour la caméra RGB -->
  <gazebo reference="camera_link">
    <sensor type="camera" name="rgb_camera">
      <pose>0 0 0 0 0 0</pose>
      <visualize>true</visualize>
      <update_rate>30</update_rate>
      <camera name="camera">
        <horizontal_fov>1.5708</horizontal_fov>
        <image>
          <width>640</width>
          <height>480</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.1</near>
          <far>10.0</far>
        </clip>
      </camera>
      <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
        <ros>
          <remapping>~/image_raw:=/camera/image_raw</remapping>
          <remapping>~/camera_info:=/camera/camera_info</remapping>
        </ros>
        <camera_name>rgb_camera</camera_name>
        <frame_name>camera_link</frame_name>
      </plugin>
    </sensor>
    <material>Gazebo/Black</material>
  </gazebo>

</robot>
