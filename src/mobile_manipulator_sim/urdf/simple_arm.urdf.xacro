<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:macro name="simple_arm" params="prefix parent *origin">

    <!-- Base du bras -->
    <joint name="${prefix}arm_base_joint" type="fixed">
      <xacro:insert_block name="origin"/>
      <parent link="${parent}"/>
      <child link="${prefix}arm_base_link"/>
    </joint>

    <link name="${prefix}arm_base_link">
      <visual>
        <geometry>
          <cylinder radius="0.06" length="0.08"/>
        </geometry>
        <material name="dark_grey">
          <color rgba="0.3 0.3 0.3 1.0"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <cylinder radius="0.06" length="0.08"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="2.0"/>
        <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
      </inertial>
    </link>

    <!-- Joint rotation base -->
    <joint name="${prefix}shoulder_pan_joint" type="revolute">
      <parent link="${prefix}arm_base_link"/>
      <child link="${prefix}shoulder_link"/>
      <origin xyz="0 0 0.04" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit lower="-3.14" upper="3.14" effort="50.0" velocity="1.0"/>
      <dynamics damping="0.7"/>
    </joint>

    <!-- Épaule -->
    <link name="${prefix}shoulder_link">
      <visual>
        <origin xyz="0 0 0.15" rpy="0 0 0"/>
        <geometry>
          <box size="0.08 0.06 0.3"/>
        </geometry>
        <material name="blue">
          <color rgba="0.2 0.4 0.8 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0.15" rpy="0 0 0"/>
        <geometry>
          <box size="0.08 0.06 0.3"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="3.0"/>
        <origin xyz="0 0 0.15"/>
        <inertia ixx="0.03" ixy="0.0" ixz="0.0" iyy="0.03" iyz="0.0" izz="0.005"/>
      </inertial>
    </link>

    <!-- Joint épaule -->
    <joint name="${prefix}shoulder_lift_joint" type="revolute">
      <parent link="${prefix}shoulder_link"/>
      <child link="${prefix}upper_arm_link"/>
      <origin xyz="0 0 0.3" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="-1.57" upper="1.57" effort="50.0" velocity="1.0"/>
      <dynamics damping="0.7"/>
    </joint>

    <!-- Bras supérieur -->
    <link name="${prefix}upper_arm_link">
      <visual>
        <origin xyz="0.15 0 0" rpy="0 1.5707 0"/>
        <geometry>
          <cylinder radius="0.04" length="0.30"/>
        </geometry>
        <material name="orange">
          <color rgba="1.0 0.5 0.0 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0.15 0 0" rpy="0 1.5707 0"/>
        <geometry>
          <cylinder radius="0.04" length="0.30"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="2.5"/>
        <origin xyz="0.15 0 0"/>
        <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.02" iyz="0.0" izz="0.02"/>
      </inertial>
    </link>

    <!-- Joint coude -->
    <joint name="${prefix}elbow_joint" type="revolute">
      <parent link="${prefix}upper_arm_link"/>
      <child link="${prefix}forearm_link"/>
      <origin xyz="0.30 0 0" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="-1.57" upper="1.57" effort="30.0" velocity="1.0"/>
      <dynamics damping="0.5"/>
    </joint>

    <!-- Avant-bras -->
    <link name="${prefix}forearm_link">
      <visual>
        <origin xyz="0.12 0 0" rpy="0 1.5707 0"/>
        <geometry>
          <cylinder radius="0.035" length="0.24"/>
        </geometry>
        <material name="green">
          <color rgba="0.2 0.8 0.3 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0.12 0 0" rpy="0 1.5707 0"/>
        <geometry>
          <cylinder radius="0.035" length="0.24"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="1.5"/>
        <origin xyz="0.12 0 0"/>
        <inertia ixx="0.005" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
      </inertial>
    </link>

    <!-- Joint poignet -->
    <joint name="${prefix}wrist_joint" type="revolute">
      <parent link="${prefix}forearm_link"/>
      <child link="${prefix}wrist_link"/>
      <origin xyz="0.24 0 0" rpy="0 0 0"/>
      <axis xyz="1 0 0"/>
      <limit lower="-1.57" upper="1.57" effort="20.0" velocity="1.0"/>
      <dynamics damping="0.5"/>
    </joint>

    <!-- Poignet -->
    <link name="${prefix}wrist_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 1.5707 0"/>
        <geometry>
          <cylinder radius="0.035" length="0.08"/>
        </geometry>
        <material name="yellow">
          <color rgba="1.0 1.0 0.0 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 1.5707 0"/>
        <geometry>
          <cylinder radius="0.035" length="0.08"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.8"/>
        <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
      </inertial>
    </link>

    <!-- Gripper gauche -->
    <joint name="${prefix}finger_left_joint" type="prismatic">
      <parent link="${prefix}wrist_link"/>
      <child link="${prefix}finger_left"/>
      <origin xyz="0.04 0.025 0" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="0.0" upper="0.03" effort="10.0" velocity="0.5"/>
      <dynamics damping="0.3"/>
    </joint>

    <link name="${prefix}finger_left">
      <visual>
        <origin xyz="0.03 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.06 0.015 0.08"/>
        </geometry>
        <material name="red">
          <color rgba="1.0 0.0 0.0 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0.03 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.06 0.015 0.08"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.1"/>
        <origin xyz="0.03 0 0"/>
        <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
      </inertial>
    </link>

    <!-- Gripper droit -->
    <joint name="${prefix}finger_right_joint" type="prismatic">
      <parent link="${prefix}wrist_link"/>
      <child link="${prefix}finger_right"/>
      <origin xyz="0.04 -0.025 0" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="-0.03" upper="0.0" effort="10.0" velocity="0.5"/>
      <dynamics damping="0.3"/>
    </joint>

    <link name="${prefix}finger_right">
      <visual>
        <origin xyz="0.03 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.06 0.015 0.08"/>
        </geometry>
        <material name="red">
          <color rgba="1.0 0.0 0.0 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0.03 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.06 0.015 0.08"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.1"/>
        <origin xyz="0.03 0 0"/>
        <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
      </inertial>
    </link>

    <!-- Gazebo colors -->
    <gazebo reference="${prefix}arm_base_link">
      <material>Gazebo/DarkGrey</material>
    </gazebo>
    <gazebo reference="${prefix}shoulder_link">
      <material>Gazebo/Blue</material>
    </gazebo>
    <gazebo reference="${prefix}upper_arm_link">
      <material>Gazebo/Orange</material>
    </gazebo>
    <gazebo reference="${prefix}forearm_link">
      <material>Gazebo/Green</material>
    </gazebo>
    <gazebo reference="${prefix}wrist_link">
      <material>Gazebo/Yellow</material>
    </gazebo>
    <gazebo reference="${prefix}finger_left">
      <material>Gazebo/Red</material>
    </gazebo>
    <gazebo reference="${prefix}finger_right">
      <material>Gazebo/Red</material>
    </gazebo>

  </xacro:macro>

</robot>